{
    // tasks.json 形式の詳細についての資料は、
    // https://go.microsoft.com/fwlink/?LinkId=733558 をご覧ください
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "c_build",
            "command": "gcc",
            "args": [
				"-Wall",
				"-Wextra",
				"-Werror",
				"${fileDirname}/main.c",
				"${fileDirname}/get_next_line_original.c",
				// "${fileDirname}/get_next_line_submitted.c",
				"${fileDirname}/get_next_line_utils.c",
				"-o",
				"${fileDirname}/main",
				"-g",
				"-D",
				"BUFFER_SIZE=1324576543345672"

				/*
                "-g",
                "${fileDirname}/main.c",
				"${fileDirname}/libft.a",
				"${fileDirname}/pnbr.c",
                "-o",
				"${fileDirname}/main",
				*/
            ],
            "group": "build"
        }
    ]
}
